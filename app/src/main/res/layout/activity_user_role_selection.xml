<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:padding="24dp"
    android:background="@color/backgroundColor"
    tools:context=".UserRoleSelectionActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/app_logo_desc"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center_horizontal" />

    <!-- Commuter Button -->
    <Button
        android:id="@+id/commuter_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/commuter"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"
        android:drawableStart="@drawable/ic_commuter"
        android:drawablePadding="12dp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:contentDescription="@string/commuter_desc" />

    <!-- Driver Button -->
    <Button
        android:id="@+id/driver_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/driver"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"
        android:drawableStart="@drawable/ic_driver"
        android:drawablePadding="12dp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:contentDescription="@string/driver_desc" />

    <!-- Operator Button -->
    <Button
        android:id="@+id/operator_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/operator"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"
        android:drawableStart="@drawable/ic_operator"
        android:drawablePadding="12dp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:contentDescription="@string/operator_desc" />

    <!-- Admin Button -->
    <Button
        android:id="@+id/admin_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/admin"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"
        android:drawableStart="@drawable/ic_admin"
        android:drawablePadding="12dp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:contentDescription="@string/admin_desc" />

</LinearLayout>
