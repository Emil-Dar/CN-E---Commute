<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <!-- Title -->
        <TextView
            android:id="@+id/report_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_problem"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Spinner 1: Passenger Safety Violations -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passenger Safety Violations"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:background="@color/skyblue"/>

        <Spinner
            android:id="@+id/spinner_passenger_safety"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"
            android:spinnerMode="dropdown"
            android:entries="@array/passenger_safety_violations" />

        <!-- Spinner 2: Operational Violations -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Operational Violations"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:background="@color/skyblue"/>

        <Spinner
            android:id="@+id/spinner_operational"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"
            android:spinnerMode="dropdown"
            android:entries="@array/operational_violations" />

        <!-- Spinner 3: Traffic Rule Violations -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Traffic Rule Violations"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:background="@color/skyblue"/>

        <Spinner
            android:id="@+id/spinner_traffic_rules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"
            android:spinnerMode="dropdown"
            android:entries="@array/traffic_rule_violations" />

        <!-- Spinner 4: Vehicle Condition Violations -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle Condition Violations"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:background="@color/skyblue"/>

        <Spinner
            android:id="@+id/spinner_vehicle_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"
            android:spinnerMode="dropdown"
            android:entries="@array/vehicle_condition_violations" />

        <!-- Spinner 5: Driver Conduct Violations -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driver Conduct Violations"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:background="@color/skyblue"/>

        <Spinner
            android:id="@+id/spinner_driver_conduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"
            android:spinnerMode="dropdown"
            android:entries="@array/driver_conduct_violations" />

        <!-- File selection button -->
        <Button
            android:id="@+id/select_file_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_file"
            android:layout_marginBottom="16dp" />

        <!-- Image Preview Section -->
        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/upload_image_here" />

        <!-- Open camera button -->
        <Button
            android:id="@+id/open_camera_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/open_camera"
            android:layout_marginBottom="16dp" />

        <!-- Submit button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:backgroundTint="@color/blue"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="60dp" />

    </LinearLayout>
</ScrollView>
