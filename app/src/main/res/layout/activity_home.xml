<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".HomeActivity">

    <!-- Content of the home screen -->
    <TextView
        android:id="@+id/home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Home Screen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        android:textColor="@color/textColor" />

    <!-- Instructions Section -->
    <TextView
        android:id="@+id/instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_text"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Instructions:\n\n1. Scan the QR Code to get tricycle info.\n2. View operator info.\n3. Calculate fares.\n4. Report any issues."
        android:textColor="@color/textColor"
        android:textSize="16sp" />

    <!-- Report Button -->
    <Button
        android:id="@+id/report_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:padding="12dp"
        android:text="Report"
        android:textColor="@color/white" />

    <!-- Floating Action Button for QR Code -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_qr_code"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:src="@drawable/ic_qr_code"
        android:contentDescription="QR Code Scanner"
        android:tint="@color/white"
        app:backgroundTint="@color/colorAccent" />

    <!-- Bottom Navigation Bar with Icons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/ic_home"
            android:contentDescription="Home"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text=""
            android:tint="@color/white" />

        <Button
            android:id="@+id/map_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/ic_map"
            android:contentDescription="Map"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text=""
            android:tint="@color/white" />

        <Button
            android:id="@+id/history_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/ic_history"
            android:contentDescription="History"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text=""
            android:tint="@color/white" />

        <Button
            android:id="@+id/account_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableTop="@drawable/ic_account"
            android:contentDescription="Account"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text=""
            android:tint="@color/white" />
    </LinearLayout>
</RelativeLayout>
