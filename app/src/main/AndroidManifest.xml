<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- No need for WRITE_EXTERNAL_STORAGE if targeting Android 11+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Declare App Requirements -->
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <!-- Queries for Android 11+ -->
    <queries>
        <intent>
            <action android:name="android.intent.action.GET_CONTENT" />
        </intent>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.CNECommute"
        tools:targetApi="31">

        <!-- QR Scanner Activity -->
        <activity
            android:name=".QRScannerActivity"
            android:exported="false" />

        <!-- Splash Screen Activity -->
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- User Role Selection Activity -->
        <activity
            android:name=".UserRoleSelectionActivity"
            android:exported="true" />

        <!-- Driver Activities -->
        <activity
            android:name=".DriverSignInActivity"
            android:exported="true" />
        <activity
            android:name=".DriverSignUpActivity"
            android:exported="true" />

        <!-- User Activities -->
        <activity
            android:name=".SignInActivity"
            android:exported="true" />
        <activity
            android:name=".SignUpActivity"
            android:exported="true" />

        <!-- Home Activities -->
        <activity
            android:name=".HomeActivity"
            android:exported="true" />
        <activity
            android:name=".DriverHomeActivity"
            android:exported="true" />
        <activity
            android:name=".AdminHomeActivity"
            android:exported="true" />

        <!-- Report Activity -->
        <activity
            android:name=".ReportActivity"
            android:exported="true" />

        <!-- New Driver Activities -->
        <activity
            android:name=".WalletActivity"
            android:exported="true" />
        <activity
            android:name=".DriverNotificationActivity"
            android:exported="true" />
        <activity
            android:name=".DriverAccountActivity"
            android:exported="true" />


        <activity android:name=".MapActivity" android:exported="true" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDeMJ4DFDXex6wnusKOMcBwjULAt4LXufY" />


    </application>
</manifest>
